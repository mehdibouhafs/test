# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~



GET     /home              @controllers.Application.home

GET     /                       controllers.HomeController.index()

# An example controller showing a sample home page
POST     /upload                   controllers.UploadController.upload()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# An Client controller showing a sample uploadResults page
GET     /files                         controllers.HomeController.getFiles()

# Home page

GET     /index                          controllers.HomeController.getIndex(id: Long ?= 0)
POST    /index                          controllers.HomeController.postIndex()


